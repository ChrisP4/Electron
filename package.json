{
	"name": "micropad-electron",
	"version": "3.1.0",
	"description": "The electron port of MicroPad",
	"main": "main.js",
	"scripts": {
		"start": "./node_modules/typescript/bin/tsc --target es6 --module CommonJS main.ts preload.ts; electron .",
		"test": "echo \"Error: no test specified\" && exit 1",
		"update-core": "rm -rf core; rm -rf tmp; git clone --depth=1 https://github.com/MicroPad/Web.git tmp; cd tmp/app; npm install; npm run build; rm build/service-worker.js; cp -r build ../../core; cd ../..; rm -rf tmp",
		"postinstall": "./node_modules/.bin/electron-rebuild"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MicroPad/Electron.git"
	},
	"author": "Nick Webster",
	"license": "MPL-2.0",
	"bugs": {
		"url": "https://github.com/MicroPad/Electron/issues"
	},
	"homepage": "https://github.com/MicroPad/Electron#readme",
	"devDependencies": {
		"electron": "^2.0.0",
		"electron-rebuild": "^1.7.3",
		"typescript": "^2.8.3"
	},
	"dependencies": {
		"electron-spellchecker": "^1.1.2"
	}
}
